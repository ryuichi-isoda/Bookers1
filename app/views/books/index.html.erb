<div style="color: green;">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>
<h1>Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><p><%= book.title %></p></td>
      <td><p><%= book.body %></p></td>
      <td><p><%= link_to 'Show', book_path(book) %></p></td>
      <td><p><%= link_to 'Edit', edit_book_path(book.id) %></p></td>
      <td><p><%= link_to 'Destroy', book_path(book.id), method: :delete,data:{ confirm:'Are you sure?'} %></p></td>
    </tr>
    <% end %>
  </table>

<!------- エラーメッセージの表示 ------>
  <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li style="color: red; "><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>
<!------- ここまで ------>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <div class="field">
    <label>Title</label>
    <div class="book_title">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="field">
    <label>Body</label>
    <div class="book_body">
      <%= f.text_area :body %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>
